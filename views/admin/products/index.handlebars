<div class="container">
    <div class="header" style="margin-top: 2em;">
        <h1>Produtos</h1>
        <button id="formToggle" class="btn">Adicionar</button>
    </div>

    <hr>
    <div class="card 
    {{#if has_errors}}
        form_with_errors
        {{else}}
        productForm
    {{/if}}
     " id="productForm">
        <div class="card-header">
            Registar produto
        </div>

        <form action="/admin/products/store" method="post">
            <div class="card-content">

                {{#each errors}}
                <div class="error-msg">{{ msg }}</div>
                {{else}}
                {{/each}}

                <div class="">

                    <div class="input-field">
                        <label for="name">Nome</label>
                        <input placeholder="Nome" id="name" name="name" type="text" class="validate">
                    </div>

                    <div class="mb-4">
                        <label for="category">Categoria</label>
                        <select id="category" required name="category" class="browser-default">
                            <option value="">Selecionar</option>
                            {{#each categories}}
                            {{#each this}}
                            {{#if this.name}}
                            <option value="{{this._id}}">{{this.name}}</option>
                            {{/if}}
                            {{/each}}
                            {{/each}}
                        </select>
                    </div>

                    <div class="input-field">
                        <label for="slug">Slug</label>
                        <input placeholder="slug" id="slug" name="slug" type="text" class="validate">
                    </div>
                    <div class="input-field">
                        <label for="description">Descrição</label>
                        <textarea id="description" required placeholder="Descrição da categoria" name="description"
                            class="materialize-textarea"></textarea>
                    </div>

                    <div class="">
                        <label class="status">Status</label>
                        <select id="status"  class="browser-default" required name="status">
                            <option value="1">Ativo</option>
                            <option value="0">Bloqueado</option>
                        </select>
                    </div>

                </div>

            </div>
            <div class="card-action">
                <button class="btn">Registar</button>
            </div>
        </form>
    </div>

</div>

<script>

    $(() => {
        $(".productForm").fadeToggle(200)

        $("#formToggle").click(() => {
            $("#productForm").fadeToggle(200)
        })

        // modal
        // the "href" attribute of the modal trigger must specify the modal ID that wants to be triggered
        $('.modal').modal();
    })

</script>